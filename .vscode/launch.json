    "version": "0.2.0",
    "configurations": [
      {
        "name": "Client",
        "type": "node",
        "request": "launch",
        "args": ["${workspaceRoot}/client.ts"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "console": "integratedTerminal"
    },
    {
        "name": "Server",
        "type": "node",
        "request": "launch",
        "args": ["${workspaceRoot}/server.ts"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
    }
    ]
  }